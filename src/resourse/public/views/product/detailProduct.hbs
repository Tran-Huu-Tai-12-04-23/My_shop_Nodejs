<form method="POST" class="form__add__cart"></form>
<script>
    const iconNext = $('.icon__n');
    const iconPrev = $('.icon__p');
    const valueCount = $('.count__product');


    var countProduct = Number(valueCount.text());
    function handleCountProduct( options) {
      if( options == 0 ) {
        if( countProduct <= 1 ) {
          countProduct = 1;
          return 1;
        }
        countProduct = countProduct - 1;
        return countProduct;
      } else {
        countProduct = countProduct + 1;
        return countProduct ;
      }
    }
    iconNext.click( function() {
      const newcountProduct = handleCountProduct(1);
      $(this).parent().children('.count__product').text( newcountProduct)
    });

    iconPrev.click( function() {
      const newcountProduct = handleCountProduct(0);
      $(this).parent().children('.count__product').text( newcountProduct)
    });
</script>