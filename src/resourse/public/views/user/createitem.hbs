<div class="wrap__forom__create container mt_100">
  <div class="container form__create__item p_24">
    <h3 class="title mb_24">Post my product</h3>

    <form method="POST" action="/user/create/store">

      <div class="form_group">
        <label for="name">Name : </label>
        <input type="text" class="form-control" id="name" name="name" />
      </div>

      <div class="form_group">
        <label for="description">Description : </label>
        <input
          type="textarea"
          class="form-control"
          id="description"
          name="description"
        />
      </div>

      <div class="form_group">
        <label for="cost">Cost : </label>
        <input type="text" class="form-control" id="cost" name="cost" />
      </div>
      <div class="form_group">
        <label for="linkimage">Link image : </label>
        <input
          type="text"
          class="form-control"
          id="linkimage"
          name="linkimage"
        />
      </div>

      <button type="submit" class= " button__create button__nav right">POST</button>
    </form>
  </div>

</div>