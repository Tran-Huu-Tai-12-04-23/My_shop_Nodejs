<div class="container mt_100 wrap__ordered">
  <div class="title">
    Your order
  </div>
  <div class="list_ordered mt_24">
    <div class="item__ordered">
      {{#if item}}
        {{#each item}}
          <div class="info__ordered">
            <img
              src="{{this.productID.link_image}}"
              alt=""
            />
            <span class="name__ordered">
              {{this.productID.nameproduct}}
            </span>
            <span>
              Amout : {{this.amount}}
            </span>
            <span>Cost : {{this.productID.cost}}</span>
            <div class="modi__ordered">
              <i class="fa-solid fa-truck-fast"></i>
              <span>Thanks for you to ordered!!!</span>
            </div>
            <div class="button__cancel_order">
              Cancle ordered
              <i class="fa-regular fa-circle-xmark icon__cancle"></i>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h1>You haven't order....!</h1>
      {{/if}}
    </div>
  </div>
</div>